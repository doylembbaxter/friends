<h2>Login</h2>

<br/>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email, style: "font-weight: bold;" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"jeff@amazon.com" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, style: "font-weight: bold;" %><br/>
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"● ● ● ● ● ● ●" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group form-check">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Login", class:"btn btn-dark btn-sm" %>
  </div>
<% end %>

<br/>

<%= render "devise/shared/links" %>
