<h2>Sign Up</h2>

<br/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email, style: "font-weight: bold;" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"jeff@amazon.com" %>
  </div>

  <div class="field form-group">
    <%= f.label :profile_picture %>
    <%= f.file_field :profile_picture %>
  </div>

  <div class="field form-group">
    <%= f.label :first_name, style: "font-weight: bold;" %><br/>
    <%= f.text_field :first_name, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name, style: "font-weight: bold;" %><br/>
    <%= f.text_field :last_name, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, style: "font-weight: bold;" %>
    <% if @minimum_password_length %>
      <br/>
      <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, style: "font-weight: bold;" %><br/>
    <small class="form-text text-muted">Passwords must match</small>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up", class:"btn btn-dark btn-sm" %>
  </div>
<% end %>

<br/>

<%= render "devise/shared/links" %>
