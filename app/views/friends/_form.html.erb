  <div class="form-group">
    <%= form.label :last_name, style: "font-weight: bold;" %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Jobs" %>
  </div>

  <div class="field form-group">
    <%= form.label :emoji, style: "font-weight: bold;" %>
    <%= form.text_field :emoji, class:"form-control", placeholder:"ðŸ“±" %>
  </div>

  <div class="field form-group">
    <%= form.label :email, style: "font-weight: bold;" %>
    <%= form.text_field :email, class:"form-control", placeholder:"steve@apple.com" %>
  </div>

  <div class="field form-group">
    <%= form.label :phone, style: "font-weight: bold;" %>
    <%= form.text_field :phone, class:"form-control", placeholder:"(123) 456-7890" %>
  </div>

  <div class="field form-group">
    <%= form.label :twitter, style: "font-weight: bold;" %>
